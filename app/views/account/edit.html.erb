<div class="account-edit">
	<%= form_for [@user], :url => url_for(username: params[:username]), html: {class: 'admin-form mt-4'} do |f| %>
		<div class="row">
			<div class="col-6">
		    <div class="form-group">
		      <%= f.label :name, 'Name', class: 'form-label font-weight-bold' %>
		      <%= f.text_field :name, placeholder: 'Enter your name', class: 'form-control', :required => true %>
		    </div>
		  </div>
		  <div class="col-6">
		    <div class="form-group">
		      <%= f.label :phone, 'Phone Number', class: 'form-label font-weight-bold' %>
		      <%= f.text_field :phone, placeholder: 'Enter your phone number', class: 'form-control', :required => true %>
		    </div>
		  </div>
	  </div>
	  <div class="form-group">
	    <%= f.label :team, 'Team', class: 'form-label font-weight-bold' %>
	    <%= f.select :team, options_for_select([["Design", "1"], ["Sales", "2"], ["Customer Service", "3"], ["IT Suport", "4"]], selected: @user.team), {}, {class: 'form-control'} %>
	  </div>

	  <div class="form-actions mt-4">
	    <%= button_tag(type: "submit", class: "btn btn-primary mr-3") do %>
	      Submit
	    <% end %>

	    <a href="/<%= current_user.username %>" class="btn btn-light">Back</a>
	  </div>
	<% end %>
</div>

<div class="password-edit">
	<%= form_for [@user], :url => url_for(username: params[:username]), html: {class: 'admin-form mt-4'} do |f| %>
		<div class="form-group mt-3">
      <%= f.label :password %>
      <%= f.password_field :password, :class => 'form-control' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>

	  <div class="form-actions mt-4">
	    <%= button_tag(type: "submit", class: "btn btn-primary mr-3") do %>
	      Submit
	    <% end %>

	    <a href="/<%= current_user.username %>" class="btn btn-light">Back</a>
	  </div>
	<% end %>
</div>