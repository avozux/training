	<script type="text/javascript">
		$( document ).ready(function() {
			function correctCount() {
	      var counted = $(".quizzes").find('div[class^="quizz-"], div[class*=" quizz-"]').length;
	      var correct = $(".quizzes").find('input[data-select="true"]').length;

	      if (correct == 0) {
	        rank = "Ngu"
	        color = "noob"
	      }

	      if (correct > 0 && correct <= (counted / 3)) {
	        rank = "Y·∫øu"
	        color = "week"
	      }

	      if (correct > (counted / 3) && correct <= (counted / 2)) {
	        rank = "Kh√°"
	        color = "great"
	      }

	      if (correct > (counted / 2) && correct < counted) {
	        rank = "Gi·ªèi"
	        color = "good"
	      }

	      if (correct == counted) {
	        rank = "Xu·∫•t S·∫Øc"
	        color = "excelent"
	      }

	      $("#result").html("C√¢u ƒë√∫ng: "+correct+"/"+counted);
	      $(".result").addClass(color).css("border","1px solid #f1f1f1").html("<div class=\"quizzes-result-wrapper\"><p class=\"rank mb-0\">"+rank+"</p><br/><p class=\"mb-0\">C√¢u ƒë√∫ng: "+correct+"/"+counted+"</p></div>");

	      <% if @exam.exam_level == 4 %>
	      score = correct * 4
	      <% else %>
	      score = correct
	     	<% end %>
	    };

	    function formatTime(seconds) {
	      var h = Math.floor(seconds / 3600),
	          m = Math.floor(seconds / 60) % 60,
	          s = seconds % 60;
	      if (h < 10) h = "0" + h;
	      if (m < 10) m = "0" + m;
	      if (s < 10) s = "0" + s;
	      return h + ":" + m + ":" + s;
	    }

	    <% if @log.present? %>
	    	isPaused = true;
	    <% else %>
	    	isPaused = false;
	    <% end %>

	    // if user signed in & user never passed this examination
      <% if !@log.present? %>
    	// record log
			function dataColect() {
		    info = {
		    	'log_type' : "Exam",
		      'user_id' : <%= current_user.id %>,
		      'exam_url' : "<%= request.fullpath %>",
		      'exam_id' : <%= @exam.id %>,
		      'received' : true,
		      'authenticity_token' : $("#csrf").val()
		    };

		    $.ajax({
		      type      : 'POST',
		      url       : '/logs/'+<%= current_user.id %>,
		      data      : info,
		      dataType  : 'json',
		      encode    : true
		    });
		  }

		  // record examination
		  <% if @exam.exam_type == 1 %>
		  function quizzesResult() {
		  	var max = $('meta[name=octolytics-actor-exam-timer]').attr("content").split(':');
		  	var timemax = (+max[0]) * 60 * 60 + (+max[1]) * 60 + (+max[2]);

		  	var left = $("#timer").text().split(':');
		  	var timeleft = (+left[0]) * 60 * 60 + (+left[1]) * 60 + (+left[2]);

		  	var timeCounted = timemax - timeleft;

		    info = {
		    	'exam_type' : "Quizzes",
		      'user_id' : <%= current_user.id %>,
		      'exam_url' : "<%= request.fullpath %>",
		      'exam_id' : <%= @exam.id %>,
		      'received' : true,
		      'score' : score,
		      'time' : formatTime(timeCounted),
		      'authenticity_token' : $("#csrf").val()
		    };

		    $.ajax({
		      type      : 'POST',
		      url       : '/examination/quizzes/'+<%= current_user.id %>,
		      data      : info,
		      dataType  : 'json',
		      encode    : true
		    });
		  }
		  <% else %>
		  function quizzesResult() {
		  	var max = $('meta[name=octolytics-actor-exam-timer]').attr("content").split(':');
		  	var timemax = (+max[0]) * 60 * 60 + (+max[1]) * 60 + (+max[2]);

		  	var left = $("#timer").text().split(':');
		  	var timeleft = (+left[0]) * 60 * 60 + (+left[1]) * 60 + (+left[2]);

		  	var timeCounted = timemax - timeleft;
		  	
		    info = {
		    	'exam_type' : "Essay",
		      'user_id' : <%= current_user.id %>,
		      'exam_url' : "<%= request.fullpath %>",
		      'exam_id' : <%= @exam.id %>,
		      'received' : true,
		      'time' : formatTime(timeCounted),
		      'authenticity_token' : $("#csrf").val()
		    };

		    $.ajax({
		      type      : 'POST',
		      url       : '/examination/quizzes/'+<%= current_user.id %>,
		      data      : info,
		      dataType  : 'json',
		      encode    : true
		    });
		  }
			<% end %>
			<% end %>

	    $(".submit").click(function(){
	      // print result
	      $(this).attr("aria-disabled","true").addClass("disabled");
	      $('.submit-quizz-action').addClass("hidden");
				$('.submit-quizz-retry').removeClass("hidden");

	      correctCount();

	      isPaused = true;

				// submit data
				<% if !@log.present? %>
				dataColect();
				quizzesResult();

				setTimeout(function() {
					window.location.href = '<%= request.fullpath %>';
				}, 1000);
				<% end %>
	    })

	    // minutes are worth 60 seconds. Hours are worth 60 minutes.
	    var t = $('meta[name=octolytics-actor-exam-timer]').attr("content").split(':');
	    var time = (+t[0]) * 60 * 60 + (+t[1]) * 60 + (+t[2]);
	    var counter = setInterval(function() {
	      if(!isPaused) {
	        time--;
	        if (time < 0) {
	          correctCount();
	          $(".submit").attr("aria-disabled","true").addClass("disabled");

	          // submit data
						dataColect();
						quizzesResult();

						$('.submit-quizz-action').addClass("hidden");
						$('.submit-quizz-retry').removeClass("hidden");

						setTimeout(function() {
							window.location.href = '<%= request.fullpath %>';
						}, 1000);

	          return clearInterval(counter);
	        }
	        document.getElementById('timer').innerHTML = formatTime(time);
	      }
	    }, 1000);

	    // pause & resume time countdown
	    $('.pause').on('click', function(e) {
	      e.preventDefault();
	      isPaused = true;
	    });
	    $('.play').on('click', function(e) {
	      e.preventDefault();
	      isPaused = false;
	    });

	    // retry passed examination
	    <% if @log.present? %>
	    $('.retry').on('click', function(e) {
	      e.preventDefault();
	      isPaused = false;

	      $(this).remove();
	      $(".submit, .play, .pause").removeClass("hidden");
	    });
	    <% end %>
	  });
	</script>